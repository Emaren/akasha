<div id="post_content">

  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> ago
  </p>

  <div class="links">
    <%= link_to "Back", root_path %>
    <%= link_to "Edit", edit_post_path(@post) %>
    <%= link_to "Delete", post_path(@post), method: :delete, data: { alert: "Confirm Deletion?"} %>
  </div>

</div>
